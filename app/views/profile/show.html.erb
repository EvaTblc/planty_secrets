                <%= link_to user_list_path(current_user, list) do %>
                <div class="card-list-text">
                  <h2 class="pt-3"><%= list.name %></h2>

                  <div class="d-flex justify-content-end">
                  <%= link_to user_list_path(current_user, list), data: {turbo_method: :delete} do %>
