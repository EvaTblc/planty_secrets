<div class="container">

  <div class="info-user d-flex justify-content-start mt-5 ms-4">
    <img src="<%= cl_image_path @user.photo.key %>" class="avatar-large" alt="avatar-large" />

    <div class="d-flex flex-column justify-content-center ms-3">
      <h2><%= @user.first_name.capitalize %> <%= @user.last_name.capitalize %></h2>
      <h3 class="username">@<%= @user.username %></h3>
    </div>

    <div class="icon-edit d-flex justify-content-center align-items-center pb-5 ms-2">
      <i class="fa-regular fa-pen-to-square"></i>
    </div>
    <%= @plants.plants.all %>
  </div>

</div>
