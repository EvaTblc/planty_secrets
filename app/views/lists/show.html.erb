<div class="container pt-4 ps-4">
  <div class="row">
    <div class="col-2 ms-2">
      <%= link_to profile_path, class:"btn-go-back-green" do %>
        <i class="fa-solid fa-chevron-left"></i>
      <% end %>
      </div>
      <div class="col-7">
      <h2 class="text-center"><%= @list.name %></h2>
    </div>
  </div>

  <div class="d-flex justify-content-center">
    <% @list.favorites.each do |favorite| %>
      <div class="card plant-card">
            <%= cl_image_tag favorite.plant.photo.key, class: "plant-img"%>
            <div class="card-body plant-body">
              <div class="d-flex justify-content-between">
                <h3 class="card-title plant-title text-green"><%= favorite.plant.name %></h3>
              </div>
              <p class="card-text plant-text">France</p>
                <%= link_to user_list_bookmark_path(current_user, @list, @list.bookmarks, favorite_id: favorite.id), data: {turbo_method: :delete} do %>
                  <i class="fa-solid fa-trash"></i>
                <% end %>
            </div>
          </div>
    <% end %>
  </div>

  <div data-controller="add-favorite">
    <div class="d-flex justify-content-center">
    <p class="mt-1 me-3" >Ajoutez vos plantes favorites</p>
      <button class="button-37" role="button">
      <i class="fa-solid fa-plus fa-xs ml-2" data-action="click->add-favorite#displayForm"></i>
      </button>
    </div>

    <div class="d-flex justify-content-center">
      <div class="d-none" data-add-favorite-target = "list">
        <% @favoriteplants.each do |plant| %>
          <%= button_to user_list_bookmarks_path(current_user, @list, plant_id: plant) do %>
            <div class="card plant-card">
              <%= cl_image_tag plant.photo.key, class: "plant-img"%>
              <div class="card-body plant-body">
                <div class="d-flex justify-content-between">
                  <h3 class="card-title plant-title text-green"><%= plant.name %></h3>
                  <% favorite = Favorite.where(user: current_user, plant: @plants) %>
                  <% favorite.each do |fav| %>
                    <% if fav.plant_id == plant.id %>
                      <i class="fa-solid fa-heart fa-lg --fa-full-color mt-2"></i>
                    <% end %>
                  <% end %>
                </div>
                <p class="card-text plant-text">France</p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      </div>
  </div>
</div>
